---
import type { CollectionEntry } from "astro:content";
import PostCard from "./PostCard.astro";

interface Props {
  posts: CollectionEntry<"blog">[];
}

const { posts } = Astro.props;
---

<div>
  <ul class="-my-4">
    {
      posts.map((post, index) => (
        <li>
          <PostCard entry={post} index={index} />
        </li>
      ))
    }
  </ul>
</div>
