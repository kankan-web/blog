---
import BaseLayout from "./BaseLayout.astro";
import Navbar from "@components/base/Navbar.astro";
import SideBar from "@components/base/SideBar.astro";
import Footer from "@components/base/Footer.astro";
---

<BaseLayout>
  <div
    class="max-w-[var(--page-width)] min-h-screen grid gap-4 grid-cols-[17.5rem_auto] grid-rows-[auto_auto_1fr_auto] lg:grid-rows-[auto_1fr_auto] mx-auto"
  >
    <div id="top-header" class="col-span-2 grid-rows-1 z-50 onload-animation">
      <Navbar />
    </div>
    <div class="second">
      <SideBar />
    </div>
    <div class="three">3</div>
    <div id="footer" class="grid-rows-3 col-span-2 mt-4 onload-animation">
      <Footer />
    </div>
  </div>
  <!-- Hello -->
</BaseLayout>
